%div.left_half
  %div.boxtitle
    - @recipient = @the_thing
    = "Recipient: #{@recipient.full_name}"
  %div.boxcontent
    %ul.show_list
      = raw show_field(@recipient.full_name, 'Name')
      = raw show_field(@recipient.phones_formatted, 'Phone Numbers')
      = raw show_field(@recipient.email, 'Email')

      = raw show_field(@recipient.city_section_string, 'City Section')
      = raw show_field(@recipient.street_1, 'Address')
      = raw show_field(@recipient.buzzer_number, 'Buzzer/Code')
      = raw show_field(@recipient.level, 'Level')
      = raw show_field(@recipient.elevator, 'Elevator')
      = raw show_field(@recipient.directions, 'Directions')
      = raw show_field(@recipient.bedrooms, 'Bedrooms')
      = raw show_field(@recipient.number_of_adults, 'Adults')
      = raw show_field(@recipient.number_of_children, 'Children')
      = raw show_field(@recipient.work_school_schedule, 'Work/School Schedule')
      = raw show_field(date_formatted(@recipient.move_in_date), 'Move In Date')
      = raw show_field(@recipient.comments, 'Comments')

      = raw show_field(@recipient.previous_address, 'Previous Address')
      = raw show_field(@recipient.case_worker_id, 'Case Worker')
      = raw show_field(@recipient.case_number, 'Case Number')
      = raw show_field(@recipient.health_care_number, 'Health Care #')
      = raw show_field(@recipient.additional_information, 'Additional Info')

      = raw show_field(datetime_formatted(@recipient.intake_date), 'Intake Date')
      = raw show_field(@recipient.referred_by, 'Referred By')
      = raw show_field("$#{@recipient.donation}", 'Donation')
      %br
      = raw show_field(datetime_formatted(@recipient.created_at), 'Created At')
      = raw show_field(datetime_formatted(@recipient.updated_at), 'Updated At')


  = link_to 'Index', recipients_path
  |
  = link_to 'Edit', edit_recipient_path(@recipient)

%div.right_half
  %table
    %tr
      %td
        -#:popup => ["New Delivery", "status=0,location=0,toolbar=0,menubar=0,scrollbars=1,width=1050,resizable=1,directories=0"]
        -#:target => '_blank
        = button_to "Schedule New Delivery", new_recipient_delivery_path(@recipient), {:method => :get}
      %td
        = image_tag "deliver.png", :border => "0", :alt => "DeliverySheet", :size => "20x20"

  %br
  %br
  = render "deliveries/deliveries"
